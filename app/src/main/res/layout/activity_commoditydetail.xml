<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_title"
        android:id="@+id/goods_title" />

    <RelativeLayout
        android:id="@+id/goods_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_title">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/classify_1"
            android:id="@+id/iv_userHeadImg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_userName"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/iv_userHeadImg"
            android:layout_toEndOf="@id/iv_userHeadImg" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_userName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_goods_price" />

        <TextView
            android:text="商品名"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_userHeadImg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tv_goods_name" />

        <TextView
            android:text="价格:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goods_price"
            android:paddingRight="10dp"
            android:layout_alignBaseline="@id/tv_goods_price"
            android:layout_alignBottom="@id/tv_goods_price"
            android:layout_toLeftOf="@id/tv_goods_price"
            android:layout_toStartOf="@id/tv_goods_price" />

        <TextView
            android:text="2天前"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_goods_time"
            android:paddingLeft="10dp"
            android:layout_above="@+id/tv_goods_name"
            android:layout_toRightOf="@id/iv_userHeadImg"
            android:layout_toEndOf="@id/iv_userHeadImg" />
    </RelativeLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/recView_goods_img"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/goods_relayout"/>

    <TextView
        android:text="商品介绍"
        android:id="@+id/goods_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recView_goods_img"
        android:paddingBottom="10dp"/>
    <TextView
        android:text="巴拉巴拉巴拉巴拉"
        android:id="@+id/tv_goods_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_description"/>


</RelativeLayout>