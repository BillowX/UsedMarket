<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <include
            android:id="@+id/goods_title"
            layout="@layout/layout_title" />

        <RelativeLayout
            android:id="@+id/goods_relayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@id/goods_title">

            <ImageView
                android:id="@+id/iv_userHeadImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/classify_1"/>

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_userHeadImg"
                android:layout_toRightOf="@id/iv_userHeadImg"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textSize="@dimen/layout_info_textSize"
                android:text="username"/>

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:layout_below="@id/tv_userName"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/layout_infoValue_textSize"
                android:text="TextView"/>

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/iv_userHeadImg"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="@dimen/layout_info_textSize"
                android:text="商品名"/>

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_goods_price"
                android:layout_alignBottom="@id/tv_goods_price"
                android:layout_toLeftOf="@id/tv_goods_price"
                android:layout_toStartOf="@id/tv_goods_price"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:textSize="@dimen/layout_info_textSize"
                android:text="价格:"/>

            <TextView
                android:id="@+id/tv_goods_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_goods_name"
                android:layout_toEndOf="@id/iv_userHeadImg"
                android:layout_toRightOf="@id/iv_userHeadImg"
                android:paddingLeft="10dp"
                android:text="2天前"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/goods_relayout"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scaleType="fitXY"/>


        <com.maker.use.ui.view.GalleryView
            android:id="@+id/recView_goods_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/iv_img"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/goods_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recView_goods_img"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="@dimen/layout_info_textSize"
            android:text="商品介绍"/>

        <TextView
            android:id="@+id/tv_goods_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_description"
            android:textSize="@dimen/layout_infoValue_textSize"
            android:text="巴拉巴拉巴拉巴拉"/>


    </RelativeLayout>
</ScrollView>