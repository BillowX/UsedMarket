<include
              android:id="@+id/goods_title"
              layout="@layout/layout_title" />
  
          <RelativeLayout
              android:id="@+id/goods_relayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:layout_below="@id/goods_title">
  
              <ImageView
                  android:layout_toEndOf="@id/iv_userHeadImg"
                  android:layout_toRightOf="@id/iv_userHeadImg"
                  android:paddingLeft="10dp"
                  android:textStyle="bold"
                  android:textSize="@dimen/layout_info_textSize"
                  android:text="username"/>
  
              <TextView
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:paddingRight="10dp"
                  android:layout_below="@id/tv_userName"
                  android:textColor="@android:color/holo_red_dark"
                  android:textSize="@dimen/layout_infoValue_textSize"
                  android:text="TextView"/>
  
              <TextView
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentStart="true"
                  android:layout_below="@id/iv_userHeadImg"
                  android:padding="10dp"
                  android:textStyle="bold"
                  android:textSize="@dimen/layout_info_textSize"
                  android:text="商品名"/>
  
              <TextView
                  android:layout_toLeftOf="@id/tv_goods_price"
                  android:layout_toStartOf="@id/tv_goods_price"
                  android:paddingRight="10dp"
                  android:textStyle="bold"
                  android:textSize="@dimen/layout_info_textSize"
                  android:text="价格:"/>
  
              <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/recView_goods_img"
              android:padding="10dp"
              android:textStyle="bold"
              android:textSize="@dimen/layout_info_textSize"
              android:text="商品介绍"/>
  
          <TextView
              android:id="@+id/tv_goods_description"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/goods_description"
              android:textSize="@dimen/layout_infoValue_textSize"
              android:text="巴拉巴拉巴拉巴拉"/>
