<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sort_header_layout"
    android:layout_width="fill_parent"
    android:layout_height="40.0dip"
    android:layout_alignParentTop="true"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_sort_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sort_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发布时间"
            android:textColor="@color/text_color_2"
            android:textSize="16.0sp"/>

        <ImageView
            android:id="@+id/iv_sort_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sort_down"/>

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@color/divider_color"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sort_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sort_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="价格"
            android:textColor="@color/text_color_2"
            android:textSize="16.0sp"/>

        <ImageView
            android:id="@+id/iv_sort_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sort_down"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="1.0dip"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:id="@+id/ll_sort_prefer_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sort_prefer_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收藏人数"
            android:textColor="@color/text_color_2"
            android:textSize="16.0sp"/>

        <ImageView
            android:id="@+id/iv_sort_prefer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sort_down"
            android:visibility="gone"/>
    </LinearLayout>


</LinearLayout>
