<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--当图片为背景时，系统状态栏为透明-->
    <style name="ImageTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--系统状态栏背景为对应Activity的标题背景颜色-->
    <style name="ColorTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--设置成对应Activity的标题栏的颜色-->
        <item name="android:statusBarColor">@color/TranslucentSystemBarColor</item>
    </style>
</resources>